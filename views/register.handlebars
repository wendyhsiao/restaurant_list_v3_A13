<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Register</h1>
      <form action="/users/register">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" value="name" id="name" placeholder="Enter Name" class="form-control">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" value="email" id="email" placeholder="Enter Email" class="form-control">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" value="{{password}}" id="password" placeholder="Enter Password"
            class="form-control">
        </div>

        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" name="password2" value="{{password2}}" id="password2" placeholder="Confirm Password"
            class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>

      <p class="lead mt-4">Have An Account?<a href="/users/login">Login</a></p>
    </div>
  </div>
</div>