<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Login</h1>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="Enter Email" class="form-control">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" placeholder="Enter Password" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block mt-5">Login</button>
        <div class="row mt-3">
          <div class="col-12 clearfix">
            <a href="/auth/facebook" class="btn btn-info col-md-5 col-left"><i class="fab fa-facebook mr-2"></i>Facebook
              Login</a>
            <a href="/auth/google" class="btn btn-info col-md-5 col-right"><i class="fab fa-google mr-2"></i>Google
              Login</a>
          </div>
        </div>
      </form>
      <p class="lead mt-4"> No Account? <a href="/users/register">Register</a></p>

    </div>
  </div>
</div>